<!DOCTYPE html>
<html>
  <head>
    <title>TarefaPlus | Cadastro</title>
  </head>
  <body>
    <%= render 'layouts/navbar' %>

    <div class="container d-flex justify-content-center align-items-center min-vh-100">
      <div class="card p-4" style="width: 400px;">
        <h2 class="mb-4 text-center" style="color: #6a1b9a;">Cadastro</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Nome", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Digite seu nome" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Digite seu email" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, "Senha", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digite sua senha" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirme sua senha" %>
          </div>
          <div class="mb-3">
            <%= f.label :role, "Você é:", class: "form-label" %>
            <%= f.select :role, options_for_select([["Aluno", "student"], ["Professor", "teacher"]]), {}, class: "form-select" %>
          </div>
          <div class="d-grid">
            <%= f.submit "Cadastrar", class: "btn btn-primary" %>
          </div>
        <% end %>
        <hr>
        <div class="text-center">
        </div>
      </div>
    </div>
  </body>
</html>
