<h1>Minhas Tarefas</h1>


<%= link_to "Nova Tarefa", new_task_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Prazo</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status.humanize %></td>
        <td>
          <%= link_to "Editar", edit_task_path(task), class: "btn btn-warning" %>
          <%= link_to "Excluir", task, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
