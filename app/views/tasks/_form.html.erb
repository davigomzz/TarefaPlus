<%= form_with model: @task, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_date, "Data de Vencimento" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Status" %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select" %>
  </div>

  <%= form.submit "Salvar", class: "btn btn-success" %>
  <%= link_to "Cancelar", tasks_path, class: "btn btn-secondary" %>
<% end %>
