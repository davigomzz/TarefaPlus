<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card p-4" style="max-width: 500px; width: 100%; border-radius: 8px;">
    <h2 class="text-center mb-4" style="color: #6a1b9a;">Editar Tarefa</h2>
    
    <%= form_with model: @task, local: true do |form| %>
      <% if current_user.role == 'teacher' %>
        <div class="mb-3">
          <%= form.label :title, "Título", class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Digite o título da tarefa" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Descrição", class: "form-label" %>
          <%= form.text_area :description, class: "form-control", placeholder: "Digite a descrição da tarefa", rows: 3 %>
        </div>

        <div class="mb-3">
          <%= form.label :due_date, "Data de Entrega", class: "form-label" %>
          <%= form.date_field :due_date, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :status, "Status", class: "form-label" %>
          <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :classroom_id, "Série", class: "form-label" %>
          <%= form.select :classroom_id, options_for_select(Classroom.order(:name).pluck(:name, :id), @task.classroom_id), { include_blank: "Selecione a Série" }, class: "form-select" %>
        </div>
      <% else %>
        <div class="mb-3">
          <%= form.label :status, "Status", class: "form-label" %>
          <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select" %>
        </div>
      <% end %>

      <div class="d-flex gap-2 justify-content-end">
        <%= form.submit "Salvar", class: "btn btn-success" %>
        <%= link_to "Cancelar", tasks_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
