<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">
      <%= task.title %>
    </h5>
    <p class="card-text">
      <%= task.description %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <small class="text-muted">
      <i class="bi bi-calendar"></i> <%= task.due_date.strftime('%d/%m/%Y') %>
    </small>
        <% if current_user.role == 'professor' %>
          <%= link_to "Editar", edit_task_path(task), class: "btn btn-sm", style: "background-color: #6a1b9a; border-color: #6a1b9a; color: #fff;" %>
        <% end %>

        <% if current_user.role == 'aluno' %>
          <%= button_to "Fazer Tarefa", task_students_path(task_id: task.id), class: "btn btn-primary", method: :post %>
        <% end %>
  </div>
</div> 