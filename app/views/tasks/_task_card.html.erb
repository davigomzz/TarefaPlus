<div class="card mb-3 border-<%= task.status_class %>">
  <div class="card-body">
    <h5 class="card-title <%= 'text-decoration-line-through' if task.feito? %>">
      <%= task.title %>
    </h5>
    <p class="card-text <%= 'text-decoration-line-through' if task.feito? %>">
      <%= task.description %>
    </p>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <small class="text-muted">
      <i class="bi bi-calendar"></i> <%= task.due_date.strftime('%d/%m/%Y') %>
    </small>
    <%= link_to "Editar", edit_task_path(task), class: "btn btn-sm btn-warning" %>
  </div>
</div>
