<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card p-4" style="max-width: 500px; width: 100%; border-radius: 8px;">
    <h2 class="text-center mb-4" style="color: #6a1b9a;">Atualizar Status da Tarefa</h2>
    
    <%= form_with model: @task_student, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :status, "Status", class: "form-label" %>
        <%= form.select :status, TaskStudent.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select" %>
      </div>
      
      <div class="d-flex gap-2 justify-content-end">
        <%= form.submit "Salvar", class: "btn btn-success" %>
        <%= link_to "Cancelar", task_students_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
